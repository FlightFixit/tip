#!/bin/bash

TYPE="$1"
[ -z "$1" ] && TYPE="$OSTYPE"

case "$TYPE" in
    'cygwin' )
        [ -n "$VERBOSE" ] && echo "Cygwin"
        make -C '.../lib/mimis/inhabit/win/cygdrive/c/Program Files/Mimis/'
    ;; 'linux-gnu' )
        [ -n "$VERBOSE" ] && echo "*nix"
        cp -av .../lib/mimis/inhabit/\*nix/.* ~/
    ;;
esac
