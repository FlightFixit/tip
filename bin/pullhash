#!/bin/bash

for arg in "$@"; do
    LINK="$(readlink "$arg")"

    ENDPOINT="$MIMIS_ORIGIN"
    [[ ! -z "$LINK" && ! -e "$LINK" ]] && {
        [ -z "$ENDPOINT" ] && {
            ENDPOINT="$(git remote -v | grep -e "^origin	ssh://.* (push)$" | perl -pe 's|^origin	ssh://(.+?)/.*|\1|')"
        }
        [ -z "$ENDPOINT" ] && {
            echo 'Error: No destination server found'
            exit -1
        }
        echo "Pulling: $arg"
        rsync "$ENDPOINT:$LINK" "$LINK"
    }
done
