#!/bin/bash

for arg in "$@"; do
    [ ! -L "$arg" ] && {
        echo "Skip Non-link: $arg"
        continue
    }
    LINK="$(readlink "$arg")"
    
    ENDPOINT="$MIMIS_ORIGIN"
    [ ! -e "$LINK" ] && {
        [ -z "$ENDPOINT" ] && {
            ENDPOINT="$(git remote -v | grep -e "^origin	ssh://.* (push)$" | perl -pe 's|^origin	ssh://(.+?)/.*|\1|')"
        }
        scp "$ENDPOINT:$LINK" "$LINK"
    }
done

