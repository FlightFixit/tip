#!/bin/bash

CMD=""

IFS="
"
for path in $(cat .../lib/java/cmds/utf8); do
    [ -e "$path" ] && {
        CMD="$path"
        break
    }
done

CP=""

function addJar() {
    jar="$1"
    pullhash "$jar"

    LINK="$jar"
    LINK="$(readlink -m "$LINK")"

    [ "$OSTYPE" == 'cygwin' ] && {
        CP="$CP;$(cygpath -w "$LINK")"
    } || {
        CP="$CP:$jar"
    }
}

# ToDo: Fix

SCRIPT="$1"

[ -e lib/rhino/jars/utf8 ] && {
    pushd "$(dirname $SCRIPT)" > /dev/null
    for jar in $(cat lib/rhino/jars/utf8); do
        addJar "$jar"
    done
    popd > /dev/null
}

for jar in $(cat .../lib/rhino/jars/utf8); do
    addJar "$jar"
done

OPTS=''

## Ref: https://bugs.launchpad.net/ubuntu/+source/openjdk-6/+bug/255149
isOpenJDK=$($JAVA_CMD -version 2>&1 | grep -i "OpenJDK" | wc -l)
[ $isOpenJDK -gt 0 ] && {
    OPTS='-Xbootclasspath:/usr/lib/jvm/java-6-openjdk/jre/lib/rt.jar'
}

[ "$OSTYPE" == 'cygwin' ] && {
    OPTS="$OPTS -D os.emulator='cygwin'"
}

MAIN='org.mozilla.javascript.tools.shell.Main'

$CMD $OPTS -classpath $CP $MAIN "$@"
