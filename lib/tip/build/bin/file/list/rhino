var File = java.io.File

var $holder = $('<div/>')
$('body').append( $holder )

function list( path ) {
    $holder.clear()
    var root = new File( path )
    
    print( "Listing: " + path + "\n" )
    for( file in root.listFiles() ) {
	$holder.append( $('<a/>')
			.attr( {
			    href : file
			} )
		      .click( function() {
			  list( $(this).attr( 'href' ) )
			  return false
		      } ) )
	print( file + "\n" )
    }
}
//list( "c:\\" )
