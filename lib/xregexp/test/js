var regex = XRegExp( "(?<month> [0-9]+ ) [-/.\\s]  # month\n\
                      (?<day>   [0-9]+ ) [-/.\\s]  # day  \n\
                      (?<year>  [0-9]+ )           # year   ",
                     'x' ) 

var input = '04/20/2009'
console.log( input )

input.replace( regex, "${year}-${month}-${day}" ) // "2009-04-20"

var match = regex.exec( input )
console.log( match.month ) // "04"

