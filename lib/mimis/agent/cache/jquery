$( function() {
    var agentClass = 'org.dhappy.mimis.CacheAgentApplet'
    var jar //= chrome.extension.getURL( 'agent/cache/jar.jar' )
    jar = 'jar.jar'

    var onload = function() {
        console.log( "Testing 'load' listener" )
    }
        
    var $applet = ( $('<applet/>')
                    .attr( {
                        code : agentClass,
                        codebase : jar.replace( /[^\/]*$/, '' ),
                        archive : jar.replace( /.*\//, '' ),
                        height : 50,
                        width : '100%',
                        codebase : './',
                    } ) )
                    .bind( 'load', onload )
    var $object = ( $('<object/>')
                    .attr( {
                        classid : 'java:' + agentClass,
                        type : 'application/x-java-applet',
                        codetype : 'application/java',
                        archive : jar,
                        height : 50,
                        width : '100%',
                    } )
                    .append(
                        $('<param/>').attr( {
                            name : 'archive',
                            value : jar,
                        } )
                    )
                    .append( $applet )
                    .bind( 'load', onload ) )

    mimis = mimis || {}
    mimis.applet = mimis.applet || {}

    // ToDo: A non-destructive version of $.extend
    $.extend( true, mimis.applet, {
        load : ( function( config ) {
            var instance = ( $object.get( 0 ).get
                             ? $object.get( 0 )
                             : $applet.get( 0 ) )
            console.log( 'Load Callback' )
            mimis.trigger( 'load', {
                applet : instance,
            } )
        } )
    } )

    var callback = function( id, data ) {
        //console.log( 'callback:' + id )
        return mimis.applet.instance.callback( id, data )
    }

    $('body').append( $object )
} )
