#!/bin/bash

cd ...
git add -n .

ACTION=
SEC=5
while [ $SEC -gt 0 ]; do
    read -p $'\015'"${SEC}s: Add? [? bYn] " -t 1 -n 1 ACTION
    [ $? -eq 0 ] && SEC=0
    SEC=$(( $SEC - 1 ))
done

[ $SEC -eq -1 ] && ACTION='Y'

case "$ACTION" in
    [\?] )
        echo <<EOF
 y: yes
 n: no
 b: break
EOF
    ;;[\ bB] )
        echo $'\012'"<Break/>"
        exit -5
    ;;[nN] )
        exit -1
    ;;[yY] )
        git add .
        exit -1
    ;;'' )
        # You might have hit return or space
    ;;
esac

tx
sync
