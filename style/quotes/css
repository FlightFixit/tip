q:before { content: '\201C' }
q:after { content: '\201D' }
q.single:before, q q:before { content: '\2018' }
q.single:after, q q:after { content: '\2019' }
[lang="fr"] q:before { content: '\AB' }
[lang="fr"] q:after { content: '\BB' }
[lang="fr"] q q:before { content: '\2039' }
[lang="fr"] q q:after { content: '\203A' }

/* Multiple quoted paragraphs don't end with a trailing quote */
q.continued:after { content: ''; }
