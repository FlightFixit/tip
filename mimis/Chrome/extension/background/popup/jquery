$( function() {
    var manifest = chrome.manifest
        || ( function() {
            var manifestURL = chrome.extension.getURL( 'manifest.json' )
            var manifest
            $.ajax( {
                url : manifestURL,
                dataType : 'json',
                contentType : 'application/json',
                async : false,
                success : function( json ) {
                    manifest = json
                },
            } )
            return manifest
        } )()
    chrome.browserAction.setBadgeText( {
        text : manifest.version,
    } )
} )
